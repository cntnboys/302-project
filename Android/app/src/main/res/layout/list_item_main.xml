<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:padding="@dimen/margin_less">

	<ImageView
		android:id="@+id/list_item_main_alert"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="@dimen/margin_less"
		android:src="@drawable/ic_exclaim_dark"
		android:visibility="gone"/>

	<ImageView
		android:id="@+id/list_item_main_ico"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/list_item_main_alert"
		android:padding="@dimen/margin_less"
		android:src="@drawable/ic_placeholder_dark"/>

	<TextView
		android:id="@+id/list_item_main_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/list_item_main_ico"
		android:textAppearance="?android:attr/textAppearance"
		tools:text="Item Title"/>

	<TextView
		android:id="@+id/list_item_main_subtitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/list_item_main_title"
		android:layout_toEndOf="@id/list_item_main_ico"
		android:lines="2"
		android:textAppearance="?android:attr/textAppearanceSmall"
		tools:text="Item subtitle"/>

</RelativeLayout>